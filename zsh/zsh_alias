# General
alias ll="ls -ltra"
alias bat="bat --style='numbers,grid' --theme GitHub"
alias globalip="curl inet-ip.info"
alias find="gfind"

# Git
alias g="git"
alias ga="git a"
alias gs="git s"

# Docker & Kubernetes
alias d="docker"
alias k="kubectl"

# limelight
alias reset-lime="killall limelight &> /dev/null; limelight -c ~/.config/limelight/limelightrc &> /dev/null &"
